<!--        </androidx.cardview.widget.CardView>-->


        <ImageView
            android:padding="4dp"
            anhnn:layout_constraintTop_toTopOf="parent"
            anhnn:layout_constraintStart_toStartOf="parent"
            anhnn:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/cvIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            anhnn:setSrc="@{item.src}" />

        <TextView
            android:id="@+id/tvIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="@{item.name}"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/cvIcon"
            tool:text="ccc" />


    </androidx.constraintlayout.widget.ConstraintLayout>
