<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:anhnn="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="com.example.android_tutorial_anhnn.data.model.Icon" />

        <import type="com.example.android_tutorial_anhnn.ui.home.IconAdapter.IconItemListener" />

        <variable
            name="item"
            type="Icon" />

        <variable
            name="listener"
            type="IconItemListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:onClick="@{()-> listener.onItemClick(item)}">

